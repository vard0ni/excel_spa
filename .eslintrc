{
  "parser": "babel-eslint",
  "env": { //где применяем код
    "es6": true,
    "browser": true,
    "node": true  //потому что webpack находится в node.js
  },
  "rules": {  //свои правила для проекта
    "semi": "off",
    "arrow-parens": "off",
    "spaced-comment": "off",
    "no-multi-spaces": "off",
    "comma-dangle": "off",
    "linebreak-style": ["error", "windows"],
    "indent": "off",
    "max-len": "off",
    "require-jsdoc": "off"
    //"no-tabs": "off"
  },
  "extends": ["eslint:recommended", "google"]
}
